{% extends 'hsTradingFrontEndBundle::bootGridLayer.html.twig' %}
{% block content %}
    <div class="container content">
        <div class="row">
            <div class="shadow-wrapper">
                <div class="tag-box tag-box-v1 box-shadow shadow-effect-1 col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
                    <h2 class="text-center">{{'Manage Users'|trans}}</h2>
                </div>
            </div>
            <div class="wrapper cube-portfolio margin-bottom-20 col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 tag-box-v7">
                <div class="row">
                    <div id="filters-container" class="col-md-6">
                        <div class="headline"><h2>{{'user_table_title'|trans}}</h2></div>
                    </div>
                </div>
                <div class="row">
                    <!--Hover Rows-->
                    <div class="panel margin-bottom-40 col-md-12">
                        <div class="row panel-body">
                            <table id="list" class="table table-condensed table-hover table-striped">
                                <thead>
                                    <tr class="bootgrid-custom-header">
                                        {% for details in aColumns %}
                                            <th data-column-id="{{ details.code }}" 
                                                {% if details.htmlOptions is defined and details.htmlOptions|length >0 %}
                                                    {% for attr, value in details.htmlOptions %}
                                                        {{ attr }}="{{ value}}"
                                                    {% endfor %}
                                                {% endif %}
                                                >
                                                {{ details.title }}
                                            </th>
                                        {% endfor %}
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <!--End Striped and Hover Rows-->
            </div>
        </div>
    </div>
</div>
<div id="status">
</div>
<div class="pull-right">
    <div id="dialog-toolbar-item-add"  style="display: none">{{ 'jtable_add_button'|trans }}</div>
</div>
<div style="display: none;">
    <span  id="spanEditElement">
        <button class="btn btn-u rounded btn-u-sm command-edit"  data-toggle="tooltip"
                data-placement="right" title="{{"edit_user_dialog_title"|trans}}">
            <span class="fa fa-pencil"></span>
        </button>
    </span>
</div>
<div id="dialog-form"  style="display: none"></div>
<div id="jtable-title"  style="display: none">{{ 'user_table_title'|trans }}</div>
{% endblock %}

{% block javascripts %}
    {{ parent()}}

    <script src="{{ asset('bundles/hstradingfrontend/js/AdminPanel.js') }}"></script>
    <script type="text/javascript">

        $(function () {
            var oAdminPanel = new AdminPanel();

        });
    </script>
{% endblock %}