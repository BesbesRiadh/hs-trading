{% extends '::base.html.twig' %}

{% block subtitle %}{{'Authentification'|trans}}-{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <!--=== Content Part ===-->
    <div class="container content">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div class="reg-page">
                    {% set formId = form.vars.id %}
                    {{ form_start(form, {'attr' : { 'id' : formId ,'class': 'sky-form'}} ) }}
                    <header style="text-align: center;">{{'login_page_header'| trans}}</header>
                        {% if error %}
                        <br/>
                        <div class="has-error" style="left: 50%;" align="center">
                            {{ 'login_error'|trans }}
                        </div>
                    {% endif %}
                    <fieldset>
                        <div class="row">
                            <section class="col-lg-12">
                                <label class="input">
                                    <i class="icon-prepend fa fa-user"></i>
                                    {{ form_widget(form.login) }}
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col-lg-12">
                                <label class="input">
                                    <i class="icon-prepend fa fa-lock"></i>
                                    {{ form_widget(form.password) }}
                                </label>
                            </section>
                        </div>
                    </fieldset>

                    {{ form_rest(form) }}
                    <footer>
                        <button class="btn-u pull-ri btn-primary btn-block rounded" type="submit">{{ 'login_btn'|trans}} </button>
                    </footer>
                    {{ form_end(form) }}
                </div>
            </div>
        </div><!--/row-->
    </div><!--/container-->
{% endblock %}

{% block javascripts %}
    {{ parent()}}
{% endblock %}

