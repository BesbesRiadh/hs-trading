{% form_theme form 'hsTradingFrontEndBundle:Contact:fields.html.twig' %}
{% if success is defined and success == '1'%}
    <script>
        eModal.alert({
            message: '<div style="text-align:center;">Votre message est pris en compte. Nous vous Contacterons très bientôt</div>',
            title: '<div style="text-align:center;">Confirmation</div>',
            size: 'sm',
            useBin: true
        });
    </script>
{% endif %}
{% set formId = form.vars.id~'Form' %}
{{ form_start(form, {'attr' : {'class': 'sky-form', 'id' : formId} }) }}
{{ form_errors(form) }}
<fieldset>
    <div class="row">
        <section class="col col-6 {{ form_errors(form.mail)|trim ? 'state-error' : ''}}">
            <label class="input">
                <i class="icon-prepend fa fa-envelope"></i>
                {{ form_row(form.mail) }}
            </label>
            {%if form.mail.vars.required %}
                <div class="note note-success">{{ 'field_required' |trans}}</div>
            {%endif %}
        </section>
        <section class="col col-6 {{ form_errors(form.phone)|trim ? 'state-error' : ''}}">
            <label class="input">
                <i class="icon-prepend fa fa-phone"></i>
                {{ form_row(form.phone) }}
            </label>
        </section>
    </div>
    <section>
        <label class="textarea">
            {{ form_row(form.message) }}
            <i class="icon-append fa fa-comment"></i>
        </label>
        {%if form.message.vars.required %}
            <div class="note note-success">{{ 'field_required' |trans}}</div>
        {%endif %}
    </section>
    {% block button_widget %}
        <button id="send-contact-btn" name="button" class="btn btn-u btn-u-blue rounded
                col-xs-7 col-xs-offset-2 col-md-2 col-md-offset-5 col-sm-3 col-sm-offset-4 margin-bottom-20" type="submit">
            {% if success is defined %}
                <i class="fa fa-{{success == '1' ? 'check text-valid' : 'exclamation  text-error' }}"></i>
            {% endif %}
            <span class="spinner"></span>
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        </button>
    {% endblock button_widget %}
</fieldset>

{{ form_end(form) }}
{{ form_rest(form) }}

