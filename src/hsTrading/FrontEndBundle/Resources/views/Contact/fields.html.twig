{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="has-error" role="alert">
            {% for error in errors %}
                {{ error.message|trans }}
            {% endfor %}
        </div>
    {% endif %}
{% endblock form_errors %}

{% block form_row %}
    {% spaceless %}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    {% endspaceless %}
{% endblock form_row %}

